@using Microsoft.AspNet.Identity;

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Lato:wght@400;700&family=Open+Sans:wght@400;700&display=swap" rel="stylesheet">
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/gsap")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("styles", required: false)

</head>
<body>
    @RenderBody()

    <footer class="footer">
        <div class="container d-flex justify-content-between align-ittems-baseline">
            <div class="footer__info">
                <h3>Affordable . Quality . Hassle Free</h3>
                <address>
                    <div>Guild Cars</div>
                    <div>12345 Best Cars Lane</div>
                    <div>Minneapolis, MN 55318</div>
                </address>
            </div>
            <div class="footer__links">
                <ul class="footer__link-container">
                    <li>Inventory</li>
                    <li><a href="#">New Vehicles</a></li>
                    <li><a href="#">Used Vehicles</a></li>
                    <li><a href="#">Featured Specials</a></li>
                </ul>
                <ul class="footer__link-container">
                    <li>About Us</li>
                    <li><a href="#">Contact</a></li>
                    <li><a href="#">Our Values</a></li>
                    <li><a href="#">Careers</a></li>
                </ul>
            </div>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

