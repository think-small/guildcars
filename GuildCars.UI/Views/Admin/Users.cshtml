@model GuildCars.UI.Models.UsersListViewModel
@{
    ViewBag.Title = "Users";
    Layout = "~/Views/Shared/_LayoutNoNav.cshtml";
}

<main class="container">
    <h2>Users</h2>

    <table class="table">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Role(s)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model.Users)
            {
                <tr>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td>@user.Email</td>
                    <td>
                        @if (user.Roles.Count == 0) 
                        {
                            <text>None</text>
                        }
                        @foreach (var role in user.Roles)
                        {
                            <text>@role</text>
                        }
                    </td>
                    <td>@Html.ActionLink("Edit", "EditUser", new { Id = user.Id })</td>
                </tr>
            }
        </tbody>
    </table>
</main>
